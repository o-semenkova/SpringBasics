<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="Client">
        <constructor-arg type="java.lang.Long" value="1"/>
        <constructor-arg type="java.lang.String" value="Oksana Semenkova"/>
    </bean>

    <bean id="consoleEventLogger" class="ConsoleEventLogger"/>

    <bean id="app" class="App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

    <bean id="dateFormat"
          class="java.text.DateFormat"
            factory-method="getDateTimeInstance"/>

    <bean id="event" class="Event">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
        <constructor-arg type="java.lang.String" value="Log for 1"/>

    </bean>

    <bean id="fileEventLogger" class="FileEventLogger"
    init-method="init"/>

    <bean id="cacheFileEventLogger" class="CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="1"/>
    </bean>



</beans>